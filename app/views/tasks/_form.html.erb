<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 label-control">タスク名</label>
      <div class="col-sm-8">
        <%= f.text_field :title,class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">タスク詳細</label>
      <div class="col-sm-8">
        <%= f.text_area :detail,class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">納期</label>
      <div class="col-sm-8">
        <%= f.date_field :due,class: "datepicker form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">ステータス</label>
      <div class="col-sm-8">
        <%= f.collection_select :status, @code_msts_for_options,:contents_cd,:contents,{},{class: 'form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">備考</label>
      <div class="col-sm-8">
      <%= f.text_area :remark, class: "form-control" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit '登録',class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
