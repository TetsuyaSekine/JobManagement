<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table class="table">
  <thead>
    <tr>
      <th>Section cd</th>
      <th>Section name</th>
      <th>Parent cd</th>
      <th>Del flg</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.section_cd %></td>
        <td><%= section.section_name %></td>
        <td><%= section.parent_cd %></td>
        <td><%= section.del_flg %></td>
        <td><%= section.remark %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

