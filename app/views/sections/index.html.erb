<p id="notice"><%= notice %></p>

<h2>部署マスタ</h2>
<%= link_to '新規部署追加', new_section_path,class: "btn btn-primary" %>

<%= page_entries_info @sections %>
<table class="table table-hover table_custom">
  <thead>
    <tr>
      <th>部署コード</th>
      <th>部署名</th>
      <th>親組織コード</th>
      <th>削除フラグ</th>
      <th>備考</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.section_cd %></td>
        <td><%= section.section_name %></td>
        <td><%= section.parent_cd %></td>
        <td><%= section.del_flg %></td>
        <td><%= section.remark %></td>
        <td><%= link_to '編集', edit_section_path(section),class: "btn btn-info btn-sm" %></td>
        <td><%= link_to '削除', section, method: :delete, data: { confirm: '本当によろしいですか？' },class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @sections %>
