<%= form_for(customer) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "件") %>のエラーがあります。</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 label-control">顧客名</label>
      <div class="col-sm-8">
        <%= f.text_field :customer,:class => 'form-control',:placeholder => '例）株式会社XXX' %>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <div class="radio-inline col-sm-offset-2 col-sm-5">
        <label class="col-sm-2"><%= f.radio_button :del_flg, '0', :checked => 'checked' %>有効</label>
        <label class="col-sm-2"><%= f.radio_button :del_flg, '1' %>無効</label>
      </div>
      <div class="col-sm-5"></div>
    </div>
    <%= f.submit '顧客登録',:class => 'col-sm-offset-2 btn btn-primary' %>
    <%= link_to 'キャンセル',customers_path, :class => 'btn btn-warning' %>
  </div>
<% end %>
