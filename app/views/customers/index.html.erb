<h2>顧客一覧</h2>
<%= link_to '新規顧客登録', customers_new_path, class: 'btn btn-primary' %>

<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name %>">
    <a class="close" data-dismiss="alert">×</a>
    <%= msg %>
  </div>
<% end %>
<table class="table">
  <thead>
    <th>顧客cd</th>
    <th>顧客名</th>
    <th>削除フラグ</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.customer %></td>
      <td><%= customer.del_flg > 0 ? "無効" : "有効" %></td>
      <td>
        <%= link_to '更新', customers_edit_path(customer), class: 'btn btn-info' %>
      </td>
      <td>
        <%= link_to '削除', customer,method: :delete, data: {confirm: '削除してもよろしいですか？'}, class: 'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
