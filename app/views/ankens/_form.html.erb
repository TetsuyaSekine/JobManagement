<%= form_for(anken) do |f| %>
  <% if anken.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(anken.errors.count, "件") %>のエラーがあります。</h2>

      <ul>
      <% anken.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-horizontal">
    <div class="form-group">
      <%= f.submit '案件登録', class: 'btn btn-primary' %>
      <%= link_to 'キャンセル',ankens_path, :class => 'btn btn-warning' %>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">主幹部署</label>
      <div class="col-sm-8">
          <%=  f.collection_radio_buttons :section_cd,
          @sections_for_options,:section_cd,:section_name  %>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">顧客</label>
      <div class="col-sm-7">
         <%= f.collection_select :customer_id, @customers_for_options,:id,:customer,{},{class: 'form-control'} %>
      </div>
      <%= link_to '顧客登録',customers_new_path, :class => 'col-sm-1 btn btn-info' %>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">案件名</label>
      <div class="col-sm-8">
        <%= f.text_field :anken_name,class: "form-control",placeholder: "案件名を入力" %>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">案件概要</label>
      <div class="col-sm-8">
        <%= f.text_area :anken_summary,class: "form-control",style: "height:150px;",placeholder: "案件に関するトピックスを記載" %>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">案件規模</label>
      <div class="col-sm-8">
        <%= f.text_field :budget_size,class: "form-control",placeholder: "千円で入力" %>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">案件期間</label>
      <div class="col-sm-8">
        <%= f.text_field :start_date, class: "datepicker form-control",placeholder: "yyyy/mm/dd" %>
        <span class="col-sm-2"> 〜 </span>
        <%= f.text_field :end_date, class: "datepicker form-control",placeholder: "yyyy/mm/dd" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">PM</label>
      <div class="col-sm-8">
        <%= f.text_field :pm,class: "form-control",placeholder: "担当PM" %>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">アサイン情報</label>
      <div class="col-sm-8">
        <%= f.text_area :asign_info,class: "form-control",style: "height:100px;",placeholder: "アサインに関する情報" %>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">案件ステータス</label>
      <div class="col-sm-6">
        <%= f.collection_select :anken_status_cd, @code_msts_for_options,:contents_cd,:contents,{},{class: 'form-control'} %>
      </div>
      <%= link_to 'ステータス編集', code_msts_path, :class => 'col-sm-2 btn btn-info' %>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">担当者</label>
      <div class="col-sm-7">
        <%= f.collection_select :tanto_id, @tantos_for_options,:id,:tanto_name,{},{class: 'form-control'} %>
      </div>
      <%= link_to '担当者追加', tantos_new_path, :class => 'col-sm-1 btn btn-info' %>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <div class="radio-inline col-sm-offset-2 col-sm-8">
        <label class="col-sm-3"><%= f.radio_button :anken_ball_cd, '0', :checked => 'checked' %>顧客ボール</label>
        <label class="col-sm-3"><%= f.radio_button :anken_ball_cd, '1' %>PPTボール</label>
      </div>
      <div class="col-sm-2"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 label-control">備考</label>
      <div class="col-sm-8">
        <%= f.text_area :remark,class: "form-control",style: "height:100px;",placeholder: "備考を記載" %>
      </div>
      <div class="col-sm-2"></div>
    </div>
  </div>
<% end%>
