<h2>案件一覧</h2>
<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name %>">
    <a class="close" data-dismiss="alert">×</a>
    <%= msg %>
  </div>
<% end %>

<a href="#searchCondition" class="btn btn-default btn-sm" data-toggle="collapse" data-target="#searchCondition"
aria-expanded="true" aria-controls="searchCondition" style="cursor: pointer;">open</a>
<div id="searchCondition" class="collapse">
  tes table_custom
  tes table_customaaaa
</div>
<table class="table table-hover table_custom">
  <thead>
    <th style="width:3%">id</th>
    <th style="width:10%">顧客名</th>
    <th style="width:10%">案件名</th>
    <th style="width:20%">案件概要</th>
    <th style="width:4%">STS</th>
    <th style="width:6%">担当者</th>
    <th style="width:5%">B</th>
    <th style="width:6%">更新者</th>
    <th style="width:14%">備考</th>
    <th style="width:6%">登録日</th>
    <th style="width:6%">更新日</th>
    <th style="width:5%"></th>
    <th style="width:5%"></th>
  </thead>
  <tbody>
    <% @ankens.each do |anken| %>
    <tr>
      <td><%= anken.id %></td>
      <td><%= anken.customer %></td>
      <td><%= anken.anken_name %></td>
      <td><%= anken.anken_summary %></td>
      <td><%= anken.contents %></td>
      <td><%= anken.tanto_name %></td>
      <td><%= anken.anken_ball_cd > 0 ? "PPTボール" : "顧客ボール" %></td>
      <td><%= anken.last_update %></td>
      <td><%= anken.remark %></td>
      <td><%= anken.created_at %></td>
      <td><%= anken.updated_at %></td>
      <td>
        <button type="button" class="btn btn-success">コメント</button>
      </td>
      <td>
        <%= link_to '更新' ,ankens_edit_path(anken), class: 'btn btn-info btn-sm'%>
        <%= link_to '削除' ,anken,method: :delete,data: {confirm: '削除してもよろしいですか？'},
          class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規案件登録', ankens_new_path, class: 'btn btn-primary' %>
