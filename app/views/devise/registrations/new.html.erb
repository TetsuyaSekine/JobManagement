<h2>ユーザー新規登録</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 label-control">email</label>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, :class => 'form-control',:placeholder => 'abc@edf.com' %>
      </div>
      <div class="col-sm-6"></div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 label-control">ユーザー名</label>
      <div class="col-sm-4">
        <%= f.text_field :username, :class => 'form-control',:placeholder => 'ログインIDとしても利用可能です。' %>
      </div>
      <div class="col-sm-6"></div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 label-control">パスワード</label>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上にしてください。)</em>
      <% end %><br />
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      </div>
        <div class="col-sm-6"></div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 label-control">パスワード再入力</label>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, autocomplete: "off",:class => 'form-control' %>
      </div>
    </div>

    <div class="form-group actions">
      <%= f.submit "新規追加",:class => 'col-sm-offset-2 btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
