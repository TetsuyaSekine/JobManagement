<h2>SFA Job Management</h2>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 label-control">ログインユーザー</label>
      <div class="col-sm-4">
        <%= f.text_field :login, autofocus: true, :class => 'form-control',:placeholder => 'email or username' %>
      </div>
      <div class="col-sm-6"></div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 label-control">パスワード</label>
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      </div>
      <div class="col-sm-6"></div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6 checkbox">
            <label class="col-sm-6 label-control"><%= f.check_box :remember_me %>ログインユーザーを記憶する</label>
        </div>
        <div class="col-sm-4"></div>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit 'ログイン', class: 'col-sm-offset-2 btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
